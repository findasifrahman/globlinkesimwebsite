{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build && pip install -r webhook_payment/requirements.txt && pip install -r webhook_esim/requirements.txt"
  },
  "deploy": {
    "startCommand": "npm run start:all",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "web",
      "command": "npm run start",
      "port": 3000
    },
    {
      "name": "webhook_payment",
      "command": "uvicorn webhook_payment.main:app --host 0.0.0.0 --port 3001",
      "port": 3001
    },
    {
      "name": "webhook_esim",
      "command": "uvicorn webhook_esim.main:app --host 0.0.0.0 --port 3002",
      "port": 3002
    }
  ]
} 